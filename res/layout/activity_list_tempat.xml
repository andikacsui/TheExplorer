<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dip" >

    <!-- ListRow Left sied Thumbnail image -->

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/gambar_tempat"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@drawable/mission1_img" />
    </LinearLayout>

    <TextView
        android:id="@+id/TextViewNamaTempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Explore Jakarta"
        android:textColor="#040404"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/TextViewDeskripsiTempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewNamaTempat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Jakarta"
        android:textColor="#343434"
        android:textSize="12sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/TextViewStatusTempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewDeskripsiTempat"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:clickable="true"
        android:onClick="TextViewStatus_OnClick"
        android:text="Unvisited"
        android:textColor="#040404"
        android:textSize="10sp"
        android:textStyle="bold" />

</RelativeLayout>